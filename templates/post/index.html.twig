{% extends "base.html.twig" %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
    <h2>List of all posts</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Title</td>
                <td>Category</td>
                <td>Actions</td>
            </tr>
        </thead>

        <tbody>
            {% for post in posts %}
                <tr>
                    <td>
                        <a href="{{ path('post.show', {id : post.id}) }}">
                        {{ post.title }}
                        </a>
                    </td>
                    <td>{{ post.category}}</td>
                    <td>
                        <a class="text-danger" href="{{ path('post.delete', {id : post.id}) }}">
                        Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        
        <a href="{{ path('post.create')}}" class="btn btn-primary">Create a post</a>
{% endblock %}